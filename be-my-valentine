    <script>
        const correctOrder = ['‚òÄÔ∏è', 'üè∞', 'üå∂Ô∏è', 'K', 'üç∏'];
        const allIcons = ['‚òÄÔ∏è', 'üè∞', 'üå∂Ô∏è', 'K', 'üç∏'];
        let selectedOrder = [];

        const compliments = [
            { emoji: 'üíï', text: 'You\'re my favorite kind of love!' },
            { emoji: 'üíñ', text: 'My heart skips a beat when I think of you!' },
            { emoji: 'üíó', text: 'You\'re the love of my life!' },
            { emoji: 'üíù', text: 'With you, every moment feels like Valentine\'s Day!' },
            { emoji: 'üíû', text: 'Our love is my favorite adventure!' },
            { emoji: 'üíì', text: 'You make my heart race in the best way!' },
            { emoji: 'üíë', text: 'You\'re my forever person!' },
            { emoji: 'üíè', text: 'You\'re worth every love song ever written!' },
            { emoji: 'üíó', text: 'Being with you is pure bliss!' },
            { emoji: '‚ú®', text: 'You\'re my greatest love story!' },
            { emoji: 'üíï', text: 'Every day with you is a gift wrapped in love!' },
            { emoji: 'üíñ', text: 'You complete me in every way!' },
            { emoji: 'üåπ', text: 'You\'re more beautiful than a thousand roses!' },
            { emoji: 'üíù', text: 'I\'m madly, deeply, completely in love with you!' },
            { emoji: 'üíì', text: 'You\'re the reason my heart believes in love!' }
        ];

        function getRandomItem(array) {
            return array[Math.floor(Math.random() * array.length)];
        }

        function createShuffledIcons() {
            const shuffled = [...allIcons].sort(() => Math.random() - 0.5);
            const container = document.getElementById('iconsContainer');
            container.innerHTML = '';

            shuffled.forEach((icon, index) => {
                const iconEl = document.createElement('div');
                iconEl.className = 'clickable-icon';
                iconEl.textContent = icon;
                iconEl.onclick = () => selectIcon(icon, iconEl);
                container.appendChild(iconEl);
            });
        }

        function selectIcon(icon, element) {
            selectedOrder.push(icon);
            element.classList.add('selected');
            element.style.pointerEvents = 'none';
            updateOrderDisplay();
            updateCheckButton();
        }

        function updateOrderDisplay() {
            const slots = document.querySelectorAll('.order-slot');
            slots.forEach((slot, index) => {
                if (index < selectedOrder.length) {
                    slot.textContent = selectedOrder[index];
                    slot.classList.add('filled');
                } else {
                    slot.textContent = '?';
                    slot.classList.remove('filled');
                }
            });
        }

        function updateCheckButton() {
            const checkBtn = document.getElementById('checkBtn');
            checkBtn.disabled = selectedOrder.length !== correctOrder.length;
        }

        function checkOrder() {
            const messageBox = document.getElementById('messageBox');
            const isCorrect = JSON.stringify(selectedOrder) === JSON.stringify(correctOrder);

            if (isCorrect) {
                messageBox.className = 'message-box success';
                messageBox.textContent = 'üéâ Perfect! You found the secret order!';
                createConfetti();
                setTimeout(createConfetti, 300);
                setTimeout(createConfetti, 600);
                setTimeout(() => {
                    revealGrandMessage();
                }, 1500);
            } else {
                messageBox.className = 'message-box error';
                messageBox.textContent = '‚ùå Not quite right! Try again.';
                displayCompliment();
            }
        }

        function resetGame() {
            selectedOrder = [];
            document.getElementById('messageBox').className = 'message-box';
            document.getElementById('messageBox').textContent = '';
            createShuffledIcons();
            updateOrderDisplay();
            updateCheckButton();
        }

        function createConfetti() {
            for (let i = 0; i < 15; i++) {
                const confetti = document.createElement('div');
                confetti.classList.add('confetti');
                confetti.textContent = ['üíï', 'üíñ', 'üíó', 'üíì'][Math.floor(Math.random() * 4)];
                confetti.style.left = Math.random() * 100 + '%';
                confetti.style.top = '-20px';
                confetti.style.fontSize = Math.random() * 15 + 15 + 'px';
                confetti.style.opacity = Math.random() * 0.7 + 0.3;
                document.body.appendChild(confetti);

                setTimeout(() => confetti.remove(), 2500);
            }
        }

        function displayCompliment() {
            const compliment = getRandomItem(compliments);
            const box = document.getElementById('complimentBox');
            
            document.getElementById('complimentEmoji').textContent = compliment.emoji;
            document.getElementById('complimentText').textContent = compliment.text;
            
            box.classList.remove('hidden');
            
            box.style.animation = 'none';
            setTimeout(() => {
                box.style.animation = '';
            }, 10);
        }

        function revealGrandMessage() {
            const grandMessage = document.getElementById('grandMessage');
            grandMessage.classList.add('active');
            createConfetti();
            setTimeout(createConfetti, 300);
            setTimeout(createConfetti, 600);
        }

        function handleYes(style) {
            const responses = {
                enthusiastic: {
                    emoji: 'üéâ',
                    text: 'I knew it! You\'re the best! üíñ'
                },
                sassy: {
                    emoji: 'üíÉ',
                    text: 'Of course you said yes. I\'m irresistible! üòé'
                },
                dramatic: {
                    emoji: 'üëë',
                    text: 'YES! You\'ve made me the happiest person alive! üåü'
                }
            };

            const response = responses[style];
            const grandMessage = document.getElementById('grandMessage');
            const grandContent = grandMessage.querySelector('.grand-content');
            
            // Update content
            grandContent.innerHTML = `
                <div class="grand-emoji">${response.emoji}</div>
                <div class="grand-title">YES! üíï</div>
                <div class="grand-text">${response.text}</div>
                <button class="close-grand" onclick="startDanceParty()">Let's Celebrate! üéä</button>
            `;
            
            createConfetti();
            setTimeout(createConfetti, 300);
            setTimeout(createConfetti, 600);
            setTimeout(createConfetti, 900);
        }

        function startDanceParty() {
            const grandMessage = document.getElementById('grandMessage');
            const celebrationDance = document.getElementById('celebrationDance');
            
            grandMessage.classList.remove('active');
            celebrationDance.classList.add('active');
            
            // Create extra confetti
            for (let i = 0; i < 3; i++) {
                setTimeout(createConfetti, i * 400);
            }
            
            // Show final message after dance
            setTimeout(() => {
                celebrationDance.classList.remove('active');
                showFinalMessage();
            }, 3500);
        }

        function showFinalMessage() {
            const finalMessage = document.getElementById('finalMessage');
            finalMessage.classList.add('active');
            
            // Extra confetti for final message
            createConfetti();
            setTimeout(createConfetti, 300);
            setTimeout(createConfetti, 600);
        }

        function closeGrandMessage() {
            document.getElementById('grandMessage').classList.remove('active');
            resetGame();
        }

        // Initialize
        createShuffledIcons();
        updateOrderDisplay();
    </script>
</body>
</html>
